<% if current_user == @user %>

  <% provide(:title, @user.name) %>

  <div class = 'container' style="margin-bottom: 30px;" >

    <div class = "row">
      <div class = "col-sm-8 col-sm-offset-2">
        <div id="calendar"></div>
        <button id="submission">submit!</button>
      </div>
    </div>

    <h2>Group</h1>

    <ul class="nav nav-tabs">
        <li class="nav-item active"><%= link_to "my groups", you_path %></li>
        <li class="nav-item"><%= link_to "Participating groups", participating_path, class: "active" %></li>
        <li class="nav-item"><%= link_to "Invited groups", invited_path %></li>
    </ul>



    <h2>my groups</h2>
    <table class="table">
      <thead>
        <tr>
          <td></td>
          <th> group name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody id="table_delete" class="append">
        <%= @groups.nil? %>
        <%= @groups.empty? %>
        <%= @submissions.empty? %>
        <% if !(@groups.empty? && @submissions.empty?) %>
          <% if @groups.count != 0 %>
            <% @groups.each_with_index do |group, i| %>

              <tr>
                <td></td>
                <td><%= link_to group.title, g_path(access_id: group.access_id) %></td>
                <td>
                  <%= link_to g_edit_path(access_id: group.access_id), remote: true do %>
                    <button>edit</button>
                  <% end %>
                </td>
                <td>
                  <%= link_to g_path(access_id: group.access_id), remote: true do %>
                    <button onClick='deleteRow(this);'>delete</button>
                  <% end %>
                </td>
              </tr>

              <% break if i >= @g_c %>

            <% end %>
          <% end %>
          <% if !@submissions.empty? %>
            <% @submissions.each_with_index do |s, k| %>
              <tr>
                <td></td>
                <td><%= link_to s.title, s_path(access_id: s.access_id) %></td>
                <td>
                  <%= link_to s_path(access_id: s.access_id) do %>
                    <button>edit</button>
                  <% end %>
                </td>
                <td>
                  <%= link_to s_path(access_id: s.access_id), method: :delete, remote: true do%>
                    <button onClick='deleteRow(this);'>delete</button>
                  <% end %>
                </td>
              </tr>
              <% break if k >= @s_c %>
            <% end %>
          <% end %>
        <% else %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

<% elsif %>

  <!-- 書き方を変える（before actionがいいかも） -->
  <p>ログインしてください。</p>

<% end %>

<%= render 'group' %>
