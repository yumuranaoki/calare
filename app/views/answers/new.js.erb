var addLine = function(obj) {
  var table = document.getElementById("tableopen");
  var tr = obj.parentNode.parentNode.rowIndex;
  var l = table.rows.length;
  for (var i=1; i < (l / 2); i++) {
    table.rows[2*i].style.display = "none";
  };
  var target = table.rows[tr+1];
  target.style.display = "";
}
